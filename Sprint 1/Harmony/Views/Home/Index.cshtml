@model IEnumerable<Harmony.Models.User>
@{
    ViewBag.Title = "Home Page";
}
<div class="container-fluid">

    <div>
        <p></p>
        <p></p>
        <p></p>
        <h1 class="title text-center" style="color:floralwhite; font-family: Broadway">Harmony--Gig booking made easy!</h1>
        <h2 class="text-center" style="color:floralwhite">Connect with venue owners, book more gigs and grow your career(Salem, Oregon).</h2>
    </div>
    <p></p>
    <p></p>
    <p></p>
    <p></p>
    <p></p>
    <p></p>
    <br />

    <div class="row">
        <div class="col-lg-4"></div>
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>

            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="~/support.jpg" alt="First slide" style="max-width: 600px;">
                    <div class="carousel-caption">
                        <h3>Black Lives Matter!</h3>
                        <p>I understand that I will never understand.</p>
                        <p>However, I stand.</p>
                    </div>

                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/Cranberries.jpg" alt="Second slide" style="max-width: 600px;">
                    <div class="carousel-caption">
                        <h3>Chicago</h3>
                        <p>Thank you, Chicago!</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/SavageGarden.png" alt="Third slide" style="max-width: 600px;">
                    <div class="carousel-caption">
                        <h3>Los Angeles</h3>
                        <p>We had such a great time in LALA Land!</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/Corrs.jpg" alt="Forth slide" style="max-width: 600px;">
                    <div class="carousel-caption">
                        <h3>New York</h3>
                        <p>We love the Big Apple!</p>
                    </div>
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
            <p></p>
            <p></p>
            <p></p>
            <p></p>
            <p></p>
            <p></p>
            <br />
        </div>
    </div>
    @if (Model.Count() > 0)
    {
        <div class="row">
            <div class="col-8 offset-2 shadow p-3 mb-5 bg-white rounded">
                <h4 style="text-align: center;"><b>Popular Users</b></h4>
                <hr />
                <p></p>
                <p></p>
                <table>
                    @if (User.IsInRole("VenueOwner"))
                    {
                        <tr>
                            <th>Name</th>
                            <th>&emsp;Location</th>
                            <th>&emsp;Email</th>
                            <th>&emsp;Rating</th>
                            <th></th>
                        </tr>
                        foreach (var u in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(x => u.FirstName) @Html.DisplayFor(x => u.LastName)</td>
                                <td>&emsp;@Html.DisplayFor(x => u.City), @Html.DisplayFor(x => u.State)</td>
                                <td>&emsp;@Html.DisplayFor(x => u.Email)</td>
                                <td>&emsp;@Html.DisplayFor(x => u.AveRating) / 5</td>
                                <td>&emsp; @Html.ActionLink("Profile", "MusicianDetails", "Users", new { id = u.ID }, null)</td>
                            </tr>
                        }

                    }
                    @if (User.IsInRole("Musician"))
                    {
                        <tr>
                            <th>Name</th>
                            <th>&emsp;Location</th>
                            <th>&emsp;Email</th>
                            <th>&emsp;Rating</th>
                            <th></th>
                        </tr>
                        foreach (var u in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(x => u.Venues.ElementAt(0).VenueName)</td>
                                <td>&emsp;@Html.DisplayFor(x => u.Venues.ElementAt(0).City), @Html.DisplayFor(x => u.Venues.ElementAt(0).State)</td>
                                <td>&emsp;@Html.DisplayFor(x => u.Email)</td>
                                <td>&emsp;@Html.DisplayFor(x => u.AveRating) / 5</td>
                                <td>&emsp; @Html.ActionLink("Profile", "Details", "Venues", new { id = u.Venues.FirstOrDefault().ID }, null)</td>
                            </tr>
                        }

                    }
                </table>
            </div>
        </div>
    }
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card-deck">
                <div class="card" style="width: 20rem;">
                    <h5 class="card-header">Musician</h5>
                    <div class="card-body">
                        <h5 class="card-title">I'm Looking for...</h5>
                        <p class="card-text">
                            <ul>
                                <li>More Gigs</li>
                                <li>Industry Exposure</li>
                                <li>Professional EPK</li>
                                <li>Network with Other Musicians</li>
                            </ul>
                        </p>
                        <a href="~/Account/Login" class="btn btn-orange">Get started</a>
                    </div>
                </div>
                <div class="card" style="width: 20rem;">
                    <h5 class="card-header">Venue Owner</h5>
                    <div class="card-body">
                        <h5 class="card-title">I'm Looking for...</h5>
                        <p class="card-text">
                            <ul>
                                <li>Book Talented Musicians</li>
                                <li>Advertise Playing Opportunities</li>
                                <li>Promote My Venues</li>
                                <li>Share Good Musics</li>
                            </ul>
                        </p>
                        <a href="~/Account/Login" class="btn btn-orange">Get started</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts

{
    @Scripts.Render("~/bundles/jqueryval")
}
