@model IEnumerable<Harmony.Models.Rating>

@if (Model.Count() > 0)
{
    <div class="row">
        <div class="col-8 offset-2 shadow p-3 mb-5 bg-white rounded" style="margin-top: 40px;">
            <h3>@Model.First().User.Venues.First().VenueName Ratings</h3>
            <table class="table">
                <tr>
                    <th>
                        Rating
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Comment)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Value) Stars
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Comment)
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
}
else
{
    <div class="row">
        <div class="col-8 offset-2 shadow p-3 mb-5 bg-white rounded" style="margin-top: 40px;">
            <h3>No Ratings Yet</h3>
        </div>
    </div>
}