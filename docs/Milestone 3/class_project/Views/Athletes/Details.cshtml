@model class_project.Models.ViewModels.AthleteDetailsViewModel

@{
    ViewBag.Title = "Details";
}

    <div class="jumbotron" style="background-color: cornflowerblue; color: white; margin-top: 20px;">
        <div class="container-fluid">
            <h1>View Athlete Profile</h1>
        </div>
    </div>
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.AthleteID)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.AthleteID)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.AthleteFirstName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.AthleteFirstName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.AthleteLastName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.AthleteLastName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.CoachName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CoachName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.TeamName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.TeamName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Records)
            </dt>

            <dd>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">MeetDate</th>
                            <th scope="col">MeetLocation</th>
                            <th scope="col">Stroke</th>
                            <th scope="col">Distance</th>
                            <th scope="col">RaceTime</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var record in Model.Records)
                        {
                        <tr>
                            <td>@Html.DisplayFor(recordItem => record.MeetDate)</td>
                            <td>@Html.DisplayFor(recordItem => record.MeetLocation)</td>
                            <td>@Html.DisplayFor(recorditem => record.Stroke)</td>
                            <td>@Html.DisplayFor(recordItem => record.Distance)</td>
                            <td>@Html.DisplayFor(recordItem => record.RaceTime)</td>
                        </tr>
                        }
                    </tbody>
                </table>
            </dd>
        </dl>
    </div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.AthleteID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
